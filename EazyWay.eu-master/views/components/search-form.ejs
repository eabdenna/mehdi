<div class="jumbotron home-hero mx-3">
    <div class="container">
        <h1 class="text-center text-white mt-5">Have the freedom to choose</h1>
        <div class="jumbotron my-5 bg-white py-5">
            <form action="/" method="post">
                <div class="row">
                    <div class="col-xl-4 col-lg-6">
                        <div class="input-group mb-4 mb-xl-0">
                            <input
                                    type="text"
                                    class="form-control"
                                    placeholder="Location"
                                    name="location"
                                    required
                            />
                            <div class="input-group-append">
                                <div class="input-group-text bg-white text-muted">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4 col-lg-6">
                        <div class="input-group mb-4 mb-xl-0">
                            <input
                                    type="text"
                                    class="form-control"
                                    placeholder="Destination"
                                    name="destination"
                                    required
                            />
                            <div class="input-group-append">
                                <div class="input-group-text bg-white text-muted">
                                    <i class="fas fa-location-arrow"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-6 mb-4 mb-lg-0">
                        <input id="datepicker" placeholder="Date" name="date" />
                    </div>
                    <div class="col-xl-1 col-lg-6">
                        <button type="submit" class="btn btn-dark btn-block">Find</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>